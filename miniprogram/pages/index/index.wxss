.header {
  width: 100%;
  height: 540rpx;
  border: 0rpx solid red;
}

.banner {
  width: 100%;
  height: 420rpx;
  float: left;
}

/* 搜索 */
.search-wrapper {
  width: 100%;
  height: 68rpx;
  float: left;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.search {
  display: flex;
  width: 85%;
  height: 100%;
  border-radius: 34rpx;
  box-shadow: 2rpx 2rpx 5rpx 0rpx rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  background-color: #ffff;
  /* padding: 10rpx 0; */
  line-height: 68rpx;
  position: relative;
  top: -40rpx;
}

.summary {
  width: 100%;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(83, 83, 83, 100);
  font-size: 20rpx;
  text-align: center;
  text-decoration: underline;
  color: #535353;
  font-weight: 700;
  position: relative;
  top: -20rpx;
}

.search input {
  margin-left: 50rpx;
  height: 100%;
  width: 75%;
  color: rgba(151, 151, 151, 100);
}

.placeholder {
  font-size: 28rpx;
  color: rgba(151, 151, 151, 100);
}

.searchIcon {
  position: absolute;
  right: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
}

/* 系列内容 */
.content {
  width: 100%;
  background-color: #101010;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  float: left;
}

.content:nth-child(4) {
  padding-bottom: 60rpx;
}

.main {
  width: 80%;
  height: 100%;
  padding-top: 60rpx;
  border: 0rpx solid red;
}

.img {
  width: 100%;
}

.series-wrapper {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  border-bottom: 2rpx solid #424242;
}

.round-wrapper {
  width: 30rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
}

.round {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #ffff;
}

.title-wrapper {
  height: 100%;
  color: #e1b381;
  float: left;
  text-align: center;
  font-size: 40rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-family: Italic;
}

.exc-wrapper {
  height: 100%;
  float: right;
  text-align: center;
  font-size: 20rpx;
  line-height: 120rpx;
  font-family: Italic;
  color: #303030;
}

.msg {
  margin-left: 50rpx;
  font-size: 20rpx;
  color: #9f9f9f;
  margin-top: 20rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.footer {
  width: 100%;
  float: left;
  background-color: #101010;
}