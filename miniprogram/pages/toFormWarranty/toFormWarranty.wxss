@import "/template/myTemplate.wxss";
.container {
  padding-bottom: 64rpx;
}

.wrapper {
  width: 90%;
  border: 0rpx solid red;
}

.box-wrapper {
  width: 100%;
  height: 68rpx;
  margin-top: 54rpx;
  border: 0rpx solid white;
}

.tag-wrapper {
  width: 30%;
  line-height: 68rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 36rpx;
  text-align: center;
  float: left;
  position: relative;
}

.input-wrapper {
  width: 55%;
  height: 100%;
  border-radius: 34rpx;
  box-shadow: 2rpx 2rpx 10rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  background-color: #fff;
  margin-left: 40rpx;
  float: left;
}

.input-wrapper input {
  height: 100%;
  width: 100%;
  color: rgba(151, 151, 151, 100);
  margin-left: 30rpx;
}

.tag-wrapper text {
  position: absolute;
  left: 50rpx;
  top: 38rpx;
  font-size: 22rpx;
  opacity: 0.5;
  color: rgba(237, 200, 160, 100);
}

.picker-wrapper {
  width: 55%;
  height: 100%;
  border: 0rpx solid red;
  float: left;
  margin-left: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.picker-nav {
  width: 30%;
  height: 100%;
  border-radius: 34rpx;
  box-shadow: 2rpx 2rpx 10rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  background-color: #fff;
}

.years {
  height: 100%;
  width: 100%;
  line-height: 68rpx;
  text-align: center;
  color: rgba(16, 16, 16, 50);
  font-size: 20rpx;
}

picker {
  height: 100%;
  width: 100%;
}

.imageList-wrapper {
  height: 100%;
  width: 60%;
  float: left;
  margin-left: 25rpx;
}

.img-wrapper {
  height: 100%;
  width: 120rpx;
  line-height: 120rpx;
  text-align: center;
  float: left;
  margin-left: 15rpx;
  border-radius: 20rpx;
  color: rgba(16, 16, 16, 100);
  background-color: #BBBBBB;
  color: rgba(255, 255, 255, 100);
  font-size: 24rpx;
  position: relative;
}

.img-wrapper image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  position: absolute;
  left: 0;
  border: 0rpx solid red;
}

.submit-wrapper {
  width: 100%;
  height: 60rpx;
  border: 0rpx solid red;
}

button {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30px;
  width: 50%;
  margin: auto;
  background-color: rgba(208, 169, 92, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  box-shadow: 4rpx 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
}

.but-hover{
  background-color: rgba(208, 169, 92, 100);
}