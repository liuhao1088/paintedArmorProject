@import "/template/myTemplate.wxss";

.maxWrap {
  width: 100%;
  height: 100%;
  background-color: #101010;
}

.title-wrapper {
  width: 100%;
  margin-top: 0rpx;
}

.maxScroll {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  z-index: 100;
  background-color: #1d1d1d;
}

.navScroll {
  height: 100%;
  width: 87%;
  display: flex;
  white-space: nowrap;
  margin: auto;
}

.navScroll .navItem {
  width: calc(100%/4);
  font-size: 20rpx;
  border: 0rpx solid red;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navScroll .navItem .active {
  color: rgb(222, 179, 124);
}

.navScroll .navContent {
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  border: 0rpx solid red;
  text-align: center;
  border-radius: 6px;
  box-shadow: -2rpx -4rpx 4rpx 0px rgba(255, 255, 255, 0.05), 5.119px 4.774px 10px 0px rgba(0, 0, 0, 0.14);
  color: #fff;
}

/* 品牌介绍 */
.imgItem {
  width: 90%;
  margin-top: 40rpx;
}

.contenItem {
  width: 80%;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 100);
  opacity: 0.65;
  text-indent: 2em;
  line-height: 40rpx;
  margin-top: 20rpx;
}

/* 加入我们 */
.titleItem {
  line-height: 40rpx;
  width: 100%;
  opacity: 0.9;
  color: rgba(38, 38, 38, 100);
  font-size: 24rpx;
  text-align: center;
  margin-top: 32rpx;

}

.wrapper {
  width: 90%;
  border-radius: 20rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  background-color: #fff;
  margin-top: 70rpx;
  border: 1px solid rgba(255, 255, 255, 100);
}

.box-wrapper {
  width: 100%;
  height: 68rpx;
  margin-top: 40rpx;
  border: 0rpx solid white;
}

.tag-wrapper {
  width: 40%;
  line-height: 68rpx;
  font-size: 36rpx;
  text-align: center;
  float: left;
  position: relative;
}

.input-wrapper {
  width: 45%;
  height: 100%;
  border-radius: 34rpx;
  box-shadow: 2rpx 2rpx 10rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  background-color: #fff;
  margin-left: 40rpx;
  float: left;
}

.input-wrapper input {
  height: 100%;
  width: 100%;
  color: rgba(151, 151, 151, 100);
  margin-left: 30rpx;
}

.submit-wrapper {
  width: 100%;
  height: 60rpx;
  border: 0rpx solid red;
  margin: 64rpx 0 60rpx 0;
}

button {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30px;
  width: 50%;
  margin: auto;
  background-color: rgba(208, 169, 92, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  box-shadow: 4rpx 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
}

.textItem {
  width: 100%;
  text-align: center;
  padding-bottom: 40rpx;

}

.codeItem {
  width: 100%;
  border: 0rpx solid red;
  padding-bottom: 30rpx;
}

.codeItem .codeImg {
  height: 100%;
  width: 100rpx;
  margin: auto;
  border: 0rpx solid red
}

/* 专利认证 */
.patentItem {
  height: 74rpx;
  line-height: 74rpx;
  background-color: rgba(38, 38, 38, 100);
  color: rgba(255, 255, 255, 100);
  box-shadow: 4rpx 4rpx 0px 0px rgba(0, 0, 0, 1);
  font-size: 32rpx;
  text-align: center;
}

.listItem {
  width: 83%;
  border: 0rpx solid red;
  margin-top: 36rpx;
}

.item {
  width: 100%;
  height: 72rpx;
  border: 0rpx solid orange;
  padding-bottom: 20rpx;
  display: flex;
}

.listImg {
  height: 100%;
  width: 72rpx;
  border: 0rpx solid white;
}

.patentContenItem {
  flex: 1;
  border: 0rpx solid blue;
  margin-left: 20rpx;
  line-height: 72rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 36rpx;
}

.certificationImgItem {
  width: 90%;
  border: 0rpx solid red;
  margin-top: 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.certificationImg {
  width: 45%;
}

/* 售后保险 */
.insuranceItem {
  width: 80%;
  border: 0rpx solid red;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}


.top_swiper {
  height: 100%;
}

.topWrapper {
  height: 180rpx;
  width: 100%;
}

.footer {
  width: 100%;
  float: left;
}

.title {
  line-height: 60rpx;
}