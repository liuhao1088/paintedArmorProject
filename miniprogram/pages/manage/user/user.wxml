<!--miniprogram/pages/manage/user/user.wxml-->
<view class="cu-bar search bg-gray" style="">
  <view class="search-form round">
    <image style="position:absolute;top:15px;left:20px;height:20px;width:20px" src="../../../images/search.png"
      class="cuIcon-search"></image>
    <input class="" style="width:80%;padding-left:35px;" type="text" bindinput="search" placeholder="搜索关键字" confirm-type="search"></input>
  </view>

</view>
<view class="container">
  <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHev}}px;" class="list"
    bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad" bindscroll="scroll">
    <view class='viewbox' bindlongtap='deleteAddr' wx:for="{{list}}" wx:key="*" data-index="{{index}}" bindtap="">

      <view class='row' class="align-center" bindtap="toLookup" data-index="{{index}}">
        <image src="{{item.avatarUrl}}" style="height:50px;width:50px;margin-left:5%;margin-right:5%" />
        <view class='column' style="width:50%;">
          <view class='viewbox-number'>昵称：{{item.nickName}}</view>
          <view class='viewbox-remark'></view>
          <text class="" style="position:absolute;right:30rpx;margin-top:32px;font-size:11px;color:gray">管理权限</text>
          <view class="viewbox-address"><text decode="{{true}}">性别：{{item.sex}} &nbsp;&nbsp;&nbsp;&nbsp;</text></view>
        </view>
        <view class='row'>

        </view>
      </view>
      <switch class="viewbox-icon" checked="{{item.isChecked}}" style="right:90rpx;top:10px;z-index:2;"
        data-index="{{index}}" bindchange="changeSwitch"></switch>
      
    </view>

    <view style="height:0px"></view>
  </scroll-view>

</view>