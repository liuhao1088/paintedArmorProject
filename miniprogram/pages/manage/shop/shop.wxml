<!--miniprogram/pages/manage/shop/shop.wxml-->
<view class="cu-bar search bg-gray" style="">
  <view class="search-form round">
    <image style="position:absolute;top:15px;left:20px;height:20px;width:20px" src="../../../images/search.png"
      class="cuIcon-search"></image>
    <input class="" style="width:80%;padding-left:35px;" type="text" bindinput="search" placeholder="搜索关键字" confirm-type="search"></input>
  </view>

</view>
<view class="container">
  <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:1000px;" class="list"
    bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad" bindscroll="scroll">
    <view class='viewbox' bindlongtap='deleteAddr' wx:for="{{list}}" wx:key="*" data-index="{{index}}" bindtap="toLookup">
      <view class='row'>
        <view class='viewbox-number'>名称：{{item.shop_name}}</view>
        <view class='viewbox-remark'></view>
        <image class='viewbox-icon' src='/images/bianji.png' data-index="{{index}}" bindtap='toEdit'></image>
      </view>
      <view class='row'>
        <view class="viewbox-address"><text decode="{{true}}">地址：{{item.address}} &nbsp;&nbsp;&nbsp;&nbsp; </text></view>
      </view>
    </view>

    <view style="height:80px"></view>
  </scroll-view>
  <view class="bottom" style="">
    <button class="button justify-center align-center" style="" bindtap="toAdd">添加门店</button>
  </view>
</view>
