<!--miniprogram/pages/manage/shop/lookup.wxml-->
<view class='background'>


  <view class='box row align-center'>
    <view class='field align-center'>门店名称</view>
    <view class='input align-center'>{{shop_name}}</view>
  </view>
  <view class='box row align-center'>
    <view class='field align-center'>门店地址</view>
    <view class='input align-center'>{{address}}{{address_name}}</view>
    <image style="height:25px;width:25px;position:absolute;right:5%;" bindtap="openLocation"
      src="../../../images/position.png" />
  </view>
  <view class='box row align-center'>
    <view class='field align-center'>地址补充</view>
    <view class='input align-center'>{{detail}}</view>
  </view>
  <view class='box row align-center'>
    <view class='field align-center'>提交时间</view>
    <view class='input align-center'>{{creation_date}}</view>
  </view>
  <view class='box row align-center'>
    <view class='field align-center'>联系人</view>
    <view class='input align-center'>{{person}}</view>
  </view>


  <view style='border-bottom:1px #d9d9d9 solid;width:100%;'>
    <view class='box row align-center' style="border-bottom:0px">
      <view class='field align-center'>联系电话</view>
      <view class='input align-center'>{{phone}}</view>
      <image style="height:25px;width:25px;position:absolute;right:5%;" bindtap="callPhone"
        src="../../../images/phone.png" />
    </view>
  </view>

</view>